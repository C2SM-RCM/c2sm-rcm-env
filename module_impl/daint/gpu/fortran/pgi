module           load gpu/gpu-base
conflict         gpu/fortran/cray
conflict         gpu/fortran/gnu
module           switch PrgEnv-cray PrgEnv-pgi
module           switch pgi pgi/16.9.0

# Load gcc/5.3.0 to link with the C++ Dynamical Core
module           load gcc/5.3.0

setenv           CXX      $GCC_PATH/snos/bin/g++
setenv           CC       $GCC_PATH/snos/bin/gcc
setenv           FC       ftn
setenv           LDFLAGS  "-L/opt/gcc/5.3.0/snos/lib64 ${LDFLAGS}"

